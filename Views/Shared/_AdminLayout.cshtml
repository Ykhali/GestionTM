<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionTM</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            height: 100vh;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                margin: 5px 0;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">Admin Menu</h4>
        <a asp-action="Dashboard">Dashboard</a>
        <a asp-action="GererConsultants">Gerer Consultants</a>
        <a asp-action="GererValidateurs">Gerer Validateurs</a>
        <!--<a asp-action="Exit" asp-controller="Home">Exit</a>-->
        <a href="#" onclick="confirmLogout()">Exit</a>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    <script>
        function confirmLogout() {
            const userConfirmed = confirm("Êtes-vous sûr de vouloir vous déconnecter ?");
            if (userConfirmed) {
                // Rediriger vers l'action Logout
                window.location.href = '/Home/Logout';
            }
        }
    </script>

</body>
</html>




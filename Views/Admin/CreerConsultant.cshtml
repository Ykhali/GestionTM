@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Create Consultant</h1>
<form asp-action="CreerConsultant" method="post">
    <div class="form-group">
        <input type="email" name="Email" class="form-control" placeholder="Email" required />
    </div>
    <div class="form-group">
        <input type="password" name="Password" class="form-control" placeholder="Password (Must start with CC)" required />
    </div>
    <div class="form-group">
        <input type="text" name="PhoneNumber" class="form-control" placeholder="Phone Number" required />
    </div>
    <div class="form-group">
        <select name="ValidateurId" class="form-control">
            <option value="">-- Select Validateur (Optional) --</option>
            @foreach (var validateur in ViewBag.Validateurs)
            {
                <option value="@validateur.Id">@validateur.Email</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
@if (ViewBag.Message != null)
{
    <p style="color: red;">@ViewBag.Message</p>
}



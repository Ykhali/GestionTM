
@{
    Layout = "~/Views/Shared/_ConsultantLayout.cshtml";
}
<h1>Manage Timesheets</h1>

@if (Model.Count == 0)
{
    <p>No timesheets yet...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Status</th>
                <th>Consultant</th>
                <th>Lines</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var timesheet in Model)
            {
                <tr>
                    <td>@timesheet.Description</td>
                    <td>@timesheet.Status</td>
                    <td>@timesheet.Consultant?.Email ?? "Not Assigned"</td>
                    <td>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Hours Worked</th>
                                    <th>Consultant Name</th>
                                    <th>Validator Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in timesheet.TimesheetLines)
                                {
                                    <tr>
                                        <td>@line.Date.ToString("yyyy-MM-dd")</td>
                                        <td>@line.HoursWorked</td>
                                        <td>@line.ConsultantName</td>
                                        <td>@line.ValidateurName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                    <td>
                        <form asp-action="ModifierTimesheet" method="get" style="display: inline;">
                            <input type="hidden" name="id" value="@timesheet.Id" />
                            <button class="btn btn-primary">Update</button>
                        </form>
                        <form asp-action="DeleteTimesheet" method="post" style="display: inline;">
                            <input type="hidden" name="id" value="@timesheet.Id" />
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="CreerTimesheet" class="btn btn-success">Create Timesheet</a>











